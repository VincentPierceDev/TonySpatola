---
const {desktopPath, mobilePath} = Astro.props;
---

<div id="display-image" class="unselect-image-container">
    <button class="close-button"><span>X</span></button>
    <picture>
        <source/>
        <source/>
        <img/>
    </picture>
</div>

<style>
    .unselect-image-container{
        display: none;
    }

    .select-image-container{
        position: fixed;
        width: 100%;
        height: 300vh;
        top: 0;
        background: rgba(0, 0, 0, .75);
        z-index: 999;
        backdrop-filter: blur(10px);
    }

    .close-button{
        background: none;
        border: none;
        position: sticky;
        top: 40%;
        left: 90%;
        width: 5rem;
        height: 5rem;

        span{
            font-size: 3rem;
            color: white;
        }
    }
</style>