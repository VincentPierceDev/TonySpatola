<style>
	
	p{
		padding: 1rem;
		line-height: 1.5;
		padding-bottom: 2rem;
	}

	h2{
		padding: 1rem;
		padding-top: 2rem;
		padding-bottom: 2rem;
		line-height: 1.5;
	}

	h2{
		color: var(--accent-color);
		text-decoration: underline;
		text-decoration-thickness: .5rem;
		text-decoration-color: var(--highlight-color);
		text-transform: uppercase;
	}

	.title-reverse{
		text-align: right;
	}

	#section-1,
	#section-2{
		background: #F7F7F7;
	}

	.section-content{
		display: flex;
		flex-direction: row;
		justify-content: space-between;
	}

	.section-content-reverse{
		display: flex;
		flex-direction: row-reverse;
		justify-content: space-between;
	}

	.image-wrapper{
		width: 20%;
		height: 100%;
	}

	.section-image{
		object-fit: cover;
		width: 100%;
		height: 100%;
		vertical-align: bottom;
	}

	@media(max-width: 850px)
	{
		.section-content{
			flex-direction: column-reverse;
		}

		.section-content-reverse{
			flex-direction: column-reverse;
		}

		.image-wrapper{
			margin: auto;
			height: 20rem;
			width: auto;
		}

		h2{
			text-align: center;
		}

		.title-reverse{
			text-align: center;
		}
	}
</style>