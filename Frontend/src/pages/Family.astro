---
import { getImage } from "astro:assets";
import PageLayout from "../layouts/PageLayout.astro";
import Header from "../components/PageHero.astro";

/* MSI - Mom Section Image */
import MSIDesktop from '../assets/TonyPoint.png';
import MSIMobile from '../assets/TonyPoint.png';

const MSIDObj = await getImage({
	src: MSIDesktop,
	width: MSIDesktop.width / 2,
	format: "webp",
	quality: "max"
});

const MSIMObj = await getImage({
	src: MSIMobile,
	width: MSIMobile.width / 2,
	format: "webp",
	quality: "max"
});

/* DSI - Dad Section Image */
