---
import PageLayout from "../layouts/PageLayout.astro";
import Header from "../components/PageHero.astro";
import { getImage } from "astro:assets";

/* TSI - Top Section Image */
import TSIDesktop from '../assets/TonyPoint.png';
import TSIMobile from '../assets/TonyPoint.png';

const TSIDObj = await getImage({
	src: TSIDesktop,
	width: TSIDesktop.width / 2,
	format: "webp",
	quality: "max"
});

const TSIMObj = await getImage({
	src: TSIMobile,
	width: TSIMobile.width / 2,
	format: "webp",
	quality: "max"
});

import BSIDesktop from '../assets/TonyPoint.png';
import BSIMobile from '../assets/TonyPoint.png';

const BSIDObj = await getImage({
	src: BSIDesktop,
	width: BSIDesktop.width / 2,
	format: "webp",
	quality: "max"
});

const BSIMObj = await getImage({
	src: BSIMobile,
	width: BSIMobile.width / 2,
	format: "webp",
	quality: "max"
})
