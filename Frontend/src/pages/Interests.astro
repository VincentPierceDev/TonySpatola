<style>

	.interest-section{
		position: relative;
		background: #F7F7F7;
		width: 100%;
		height: fit-content;
	}

	.top-text, .bottom-text, h2{
		padding-left: 1rem;
		padding-right: 1rem;
		padding-bottom: 2rem;
	}

	.top-text, h2{
		padding-top: 2rem;
	}

	.p-text{
		font-family: var(--primary-font);
		font-size: var(--body-font-size);
		line-height: 1.5;
		letter-spacing: normal;
		text-wrap: pretty;
		width: 100%;
	}

	h2{
		color: var(--accent-color);
		text-decoration: underline;
		text-decoration-thickness: .5rem;
		text-decoration-color: var(--highlight-color);
		text-transform: uppercase;
	}

	.img-wrapper{
		height: 30rem;
		width: auto;
	}

	#top-image-wrapper{
		padding-right: 1rem;
		margin-left: 1rem;
		float: right;
	}

	#bottom-image-wrapper{
		padding-left: 1rem;
		margin-right: 1rem;
		float: left;
	}

	.interest-image{
		object-fit: cover;
		width: 100%;
		height: 100%;
		vertical-align: bottom;
	}

	@media(max-width: 768px)
	{
		.section-content,
		.section-content-reverse
		{
			flex-direction: column-reverse;
		}

		.img-wrapper{
			float: none;
			width: 90%;
			align-self: center;
		}
	}

</style>